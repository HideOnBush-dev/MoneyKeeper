# Flask Environment (development or production)
FLASK_ENV=development

# Secret key for Flask application (REQUIRED)
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///moneykeeper.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# Google AI Configuration (REQUIRED for AI features)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# AI Model Configuration (optional)
# Available models: gemini-1.5-flash, gemini-1.5-pro, gemini-2.0-flash-exp
AI_MODEL_NAME=gemini-1.5-flash
AI_REQUEST_TIMEOUT=30
AI_MAX_RETRIES=3

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@moneykeeper.com
NOTIFY_VIA_EMAIL=true

# Frontend Configuration
USE_REACT_FRONTEND=true
FRONTEND_URL=http://localhost:3000

# Rate Limiting (optional)
# For Redis: redis://localhost:6379
REDIS_URL=memory://

# Security (for production)
# SESSION_COOKIE_SECURE=true
# PREFERRED_URL_SCHEME=https
